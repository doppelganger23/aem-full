<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Video Block"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Video">
                <items jcr:primaryType="cq:WidgetCollection">
                    <video
                        jcr:primaryType="cq:Widget"
                        fieldDescription="url to video, without http://"
                        fieldLabel="URL"
                        name="./url"
                        xtype="textfield"/>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Text">
                <items jcr:primaryType="cq:WidgetCollection">
                    <header
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Brief description of videoblock information "
                        fieldLabel="Header"
                        name="./headerText"
                        xtype="richtext"/>
                    <text
                        jcr:primaryType="cq:Widget"
                        fieldDescription="text information relative to the video"
                        fieldLabel="Text"
                        name="./text"
                        xtype="richtext"/>
                </items>
            </tab2>
            <tab3
                jcr:primaryType="cq:Panel"
                title="List items">
                <items jcr:primaryType="cq:WidgetCollection">
                    <features
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Features"
                        name="./features"
                        xtype="richtext"
                        removeSingleParagraphContainer="true" >
                    </features>
                </items>
            </tab3>
        </items>
    </items>
</jcr:root>
